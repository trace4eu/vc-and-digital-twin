{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "strict": false,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["scripts","src"],
  "exclude": ["node_modules", "dist", "tests"]
}
